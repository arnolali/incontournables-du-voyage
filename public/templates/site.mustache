<!DOCTYPE html>
<!--[if lt IE 8]> <html class="lt-ie10 lt-ie9 lt-ie8" lang="<?= $culture ?>"> <![endif]-->
<!--[if IE 8]>    <html class="lt-ie10 lt-ie9" lang="<?= $culture ?>"> <![endif]-->
<!--[if IE 9]>    <html class="lt-ie10" lang="<?= $culture ?>"> <![endif]-->
<!--[if gt IE 9]><!--><html lang="{{app.culture}}"><!--<![endif]-->
<head>
	<meta charset="utf-8">
	<title>{{text.form}} | Les Incontournables du voyage </title>
	<meta name="description" property="og:description" content="{{text.description}}" />
	<meta name="author" content="Simon Arnold, Jonathan Harvey" />
	<meta property="og:type" content="website"/>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<link rel="shortcut icon" href="{{path.images}}favicon.ico"/>
	<link rel="stylesheet" media="all" href="{{path.styles}}form.css">
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body class="no0">
	<div class="bg no0"></div>
	<div class="bg no1"></div>
	<div class="bg no2"></div>
	<div class="bg no3"></div>
	<div class="bg gradient"></div>
	{{>header}}
	<div class="steps">
		{{>step0}}
		<form method="post" action="ad.php" enctype="multipart/form-data" autocomplete="off" class="js-form form">
			<input type="hidden" name="id" />
			<input type="hidden" name="offersId" />
			{{>step1}}
			{{>step2}}
			{{>step3}}
		</form>
	</div>
	
	<div class="processing"></div>

	<div class="tip"></div>

	<div class="popup confirmation">
		<div class="window">
			<span class="close js-cancel"></span>
			<h2>{{{text.confirmation}}}</h2>
			<div class="text">
				{{#app.browser.isSafari}}
				<span style='color:rgba(255, 0, 0, 1)'>{{{text.zipMac}}}</span><br><br>
				{{/app.browser.isSafari}}
				{{{text.confirmationText}}}
			</div>
			<div class="footer">
				<div class="btn lft js-cancel">{{text.cancel}}</div>
				<div class="btn action rgt js-confirm">{{text.download}}</div>
			</div>
		</div>
	</div>

	<div class="popup delete">
		<div class="window">
			<span class="close js-cancel"></span>
			<h2>{{{text.confirmation}}}</h2>
			<div class="text"></div>
			<div class="footer">
				<div class="btn lft js-cancel">{{text.cancel}}</div>
				<div class="btn action rgt js-confirm">{{text.ok}}</div>
			</div>
		</div>
	</div>

	<div class="popup error">
		<div class="window">
			<span class="close js-cancel"></span>
			<h2>{{{text.error}}}</h2>
			<div class="text"></div>
		</div>
	</div>

	<script src="{{path.scripts}}plugins.min.js"></script>
	<script src="{{path.scripts}}ads.min.js"></script>
	<script src="{{path.scripts}}form.min.js"></script>
	<script>
		{{>google-analytics.mustache}}
		
		$(document).ready(function() {
          _g = new app("{{app.culture}}", "{{path.root}}");
        });
	</script>
</body>
</html>