<body class="no1">
	{{>header}}

	<form method="post" action="ad.php" enctype="multipart/form-data" autocomplete="off" class="js-form form">
		<input type="hidden" name="id" />
		<input type="hidden" name="offersId" />
		<div class="steps">
			{{>step1}}
			{{>step2}}
			{{>step3}}
		</div>
	</form>

	<footer class="main-footer">
		<div class="legend">
			<span class="color opt"></span> {{text.optionalFields}}
		</div>
		<a href="{{text.creationKitLink}}" class="return">{{text.returnToTheCreationKit}}</a>
	</footer>

	<div class="ad-drop-zone">
		<form method="post" action="{{path.libraries}}uploadZip.php" class="action import" title="{{text.importAd}}" enctype="multipart/form-data" autocomplete="off">
			<input type="file" name="adzip" class="js-import-ad" />
		</form>
		<span class="ad-drop-zone__close">{{text.close}}</span>
	</div>

	<div class="tip">asdaasdads</div>

	<script src="{{path.scripts}}plugins.min.js"></script>
	<script src="{{path.scripts}}ads.min.js"></script>
	<script src="{{path.scripts}}form.min.js"></script>
	<script>
		{{>google-analytics.mustache}}
		
		$(document).ready(function() {
          _g = new app("{{app.culture}}", "{{path.root}}");
        });
	</script>
</body>
